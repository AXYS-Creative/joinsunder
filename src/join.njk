---
layout: app
path: join

title: Join Sunder

# master props
hide_header: false
hide_footer: true
---

<section class="hero">
  <div
    class="join-carousel"
    data-carousel-interval="{{ page_join.hero.autoplay_interval }}"
  >
    <!-- prettier-ignore -->
    {% for img in page_join.hero.images %}
      {% if loop.index == 1 %}
        {% set loading = "eager" %}
      {% else %}
        {% set loading = "lazy" %}
      {% endif %}

      {% image {
        src: img.src,
        alt: "",
        className: "join-carousel__img",
        optimize: true,
        loading: loading,
        sizes: "(max-width: 600px) 320px, (max-width: 1000px) 640px, 1000px"
      } %}
    {% endfor %}
  </div>

  <div class="form-panel">
    <h1 class="form-panel__title">{{ page_join.hero.section_title }}</h1>

    <!-- prettier-ignore -->
    {% set form_data = page_join.hero.form_data %}
    {% include "./_includes/components/form-redirect.njk" %}
  </div>
</section>
