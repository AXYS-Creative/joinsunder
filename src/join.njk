---
layout: app
path: join

title: Join Sunder

# master props
hide_header: false
hide_footer: true
---

<section class="hero">
  <div
    class="join-carousel"
    data-carousel-interval="{{ page_join.hero.autoplay_interval }}"
  >
    {% for img in page_join.hero.images %}
    <!-- prettier-ignore -->
    <img class="join-carousel__img" src="{{ img.src }}" alt="{{ img.title }}"/>
    <!-- prettier-ignore -->
    {% endfor %}
  </div>

  <div class="form-panel">
    <h1 class="form-panel__title">{{ page_join.hero.section_title }}</h1>

    <!-- prettier-ignore -->
    {% set form_data = page_join.hero.form_data %}
    {% include "./_includes/components/form-redirect.njk" %}
  </div>
</section>
