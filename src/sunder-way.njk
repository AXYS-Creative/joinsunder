{% if page_sunder_way.quotes.toggle_section %}
  {% set section_title = page_sunder_way.quotes.section_title %}
  {% set quote_list = page_sunder_way.quotes.list %}
  {% include "./_includes/partials/partial-quote.njk" %}
{% endif %}
