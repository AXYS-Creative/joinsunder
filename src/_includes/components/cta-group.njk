<div class="cta-group">
  {% if cta_1.text and cta_1.url %}
  <!-- prettier-ignore -->
  <a
    class="cta-1 {%if cta_1_outline%}outline{%endif%} tab-element-page"
    href="{{ cta_1.url }}"
    {%if cta_1.new_tab%}
      target="_blank" rel="noopener noreferrer"
    {%endif%}
    aria-label="{{ cta_1.text_desc or cta_1.text }}"
  >
    {{ cta_1.text }}
    <span class="sr-only">{{ cta_1.text_desc }}</span>
  </a>
  {% endif %}

  <!-- prettier-ignore -->
  {% if cta_2.text and cta_2.url %}
  <!-- prettier-ignore -->
  <a
    class="cta-2 {%if cta_2_outline%}outline{%endif%} tab-element-page"
    href="{{ cta_2.url }}"
    {%if cta_2.new_tab%}
      target="_blank" rel="noopener noreferrer"
    {%endif%}
    aria-label="{{ cta_2.text_desc or cta_2.text }}"
  >
    {{ cta_2.text }}
    <span class="sr-only">{{ cta_2.text_desc }}</span>
  </a>
  {% endif %}
</div>
