<div
  class="carousel-snap {% if carousel_snap_autoplay.enabled %}autoplay{% endif %}"
  data-autoplay-interval="{{ carousel_snap_autoplay.interval }}"
>
  <div class="carousel-snap__controls">
    <div class="carousel-snap__conrols-slider">
      <button
        class="carousel-snap-btn-prev cta-1 tab-element-page"
        aria-label="previous slide"
        aria-controls="carousel-snap__track"
      >
        Prev
      </button>
      <button
        class="carousel-snap-btn-next cta-1 tab-element-page"
        aria-label="next slide"
        aria-controls="carousel-snap__track"
      >
        Next
      </button>
    </div>

    {% if carousel_snap_autoplay.allow_user_toggle %}
    <div class="carousel-snap__controls-autoplay">
      <button
        class="carousel-snap-autoplay-toggle tab-element-page"
        aria-pressed="false"
      >
        <span class="carousel-snap-autoplay-toggle__label">autoplay:</span>
        <span class="carousel-snap-autoplay-toggle__switch" aria-hidden="true">
          <span class="carousel-snap-autoplay-toggle__switch-ball"></span>
        </span>
      </button>
    </div>
    {% endif %}
  </div>

  <div class="carousel-snap__track" id="carousel-snap__track">
    <div class="carousel-snap__track-inner">
      {% for item in list %}
      <div class="carousel-snap__track-item">
        <img src="{{ item.image }}" alt="{{ item.alt }}" />
        <h3 class="h6">{{ item.title }}</h3>
        <p>{{ item.description }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
