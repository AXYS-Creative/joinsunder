      type="text/javascript"
      src="https://identity.netlify.com/v1/netlify-identity-widget.js"
    ></script>

    <!-- Admin Preview Styles -->
    <script>
      CMS.registerPreviewStyle("/static/styles/styles.css");
    </script>
  </body>
